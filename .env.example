# Sysara Configuration Example
# This is an example environment file

# Server Configuration
PORT=8080
HOST=0.0.0.0
GIN_MODE=release

# Database Configuration
DATABASE_PATH=data/sysara.db
DATABASE_TIMEOUT=30s

# Security Configuration
SESSION_SECRET=change-this-in-production-environment
SESSION_MAX_AGE=86400

# Monitoring Configuration
REFRESH_INTERVAL=5000
MAX_PROCESSES=20

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SSH_MANAGEMENT=true
ENABLE_ENV_EDITING=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/sysara.log

# System Monitoring
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90